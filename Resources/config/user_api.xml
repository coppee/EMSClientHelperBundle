<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- services -->
        <service id="emsch.user_api.abstract" class="EMS\ClientHelperBundle\Service\UserApi\UserApiService" abstract="true" public="false">
            <argument type="string">%emsch.user_api.url%</argument>
        </service>
        <service id="emsch.user_api.auth" class="EMS\ClientHelperBundle\Service\UserApi\AuthService" parent="emsch.user_api.abstract" public="false" />
        <service id="emsch.user_api.user" class="EMS\ClientHelperBundle\Service\UserApi\UserService" parent="emsch.user_api.abstract" public="false" />
        <service id="emsch.user_api.document" class="EMS\ClientHelperBundle\Service\UserApi\DocumentService" parent="emsch.user_api.abstract" public="false" />

        <!-- controllers -->
        <service id="emsch.controller.user_api.login" class="EMS\ClientHelperBundle\Controller\UserApi\LoginController" public="true">
            <argument type="service" id="emsch.user_api.auth" />
        </service>
        <service id="emsch.controller.user_api.user" class="EMS\ClientHelperBundle\Controller\UserApi\UserController" public="true">
            <argument type="service" id="emsch.user_api.user" />
        </service>
        <service id="emsch.controller.user_api.profile" class="EMS\ClientHelperBundle\Controller\UserApi\ProfileController" public="true">
            <argument type="service" id="emsch.user_api.user" />
        </service>
        <service id="emsch.controller.user_api.document" class="EMS\ClientHelperBundle\Controller\UserApi\DocumentController" public="true">
            <argument type="service" id="emsch.user_api.document" />
        </service>
    </services>
</container>
